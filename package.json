{
  "name": "quordle-solver",
  "manifest": {
    "manifest_version": 2,
    "browser_action": {},
    "name": "Quordle Solver",
    "content_scripts": [
      {
        "matches": [
          "https://www.quordle.com/*"
        ],
        "js": [
          "extension.js"
        ]
      }
    ]
  },
  "version": "0.0.1",
  "scripts": {
    "postinstall": "node ./build/remanifest.js",
    "lint": "eslint src/**/*.js",
    "watch": "node ./build/remanifest.js --watch"
  },
  "devDependencies": {
    "chokidar": "^3.5.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-lit": "^1.5.1"
  }
}
